<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6FB"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Budget Limit"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>

        <!-- ====================== FOOD ====================== -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/btnMenuFood"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_more_vert"
                    android:padding="4dp"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food &amp; Beverage"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#2C3E50"/>

                <TextView
                    android:id="@+id/amountCurrent_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current: 0"
                    android:textColor="#7F8C8D"
                    android:layout_marginTop="6dp"/>

                <EditText
                    android:id="@+id/et_setLimitFood"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/rounded_input"
                    android:hint="Enter limit..."
                    android:paddingHorizontal="14dp"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:id="@+id/btn_addFood"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="SET"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:background="#E67E22"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- ====================== BILLS ====================== -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/btnMenuBills"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_more_vert"
                    android:padding="4dp"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bills"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#2C3E50"/>

                <TextView
                    android:id="@+id/amountCurrent_bills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current: 0"
                    android:textColor="#7F8C8D"
                    android:layout_marginTop="6dp"/>

                <EditText
                    android:id="@+id/et_setLimitBills"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/rounded_input"
                    android:hint="Enter limit..."
                    android:paddingHorizontal="14dp"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:id="@+id/btn_addBills"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="SET"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:background="#16A085"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- ====================== SHOPPING ====================== -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardShopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
