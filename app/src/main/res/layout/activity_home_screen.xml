<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F6FA"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Balance"
            android:textColor="#2C3E50"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <!-- Menambahkan View dengan weight=1 untuk mendorong ImageView ke kanan (efek space_between) -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person"
            android:background="@drawable/circleshape"
            android:padding="6dp"/>
    </LinearLayout>

    <!-- Saldo Total (Ditambahkan ID) -->
    <TextView
        android:id="@+id/TV_totalBalance"
        android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="LKR 140,000.00"
    android:textColor="#2C3E50"
    android:textSize="28sp"
    android:textStyle="bold"
    android:layout_marginBottom="24dp"/>

    <!-- INCOME & EXPENSE CARDS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <!-- Income -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#8E44AD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Income"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>


                <TextView
                    android:id="@+id/TV_totalIncome"
                    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LKR 70,000"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last update: 18:30"
                android:textColor="#E0E0E0"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Expense -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#E74C3C">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expenses"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

                <!-- Total Expense (Ditambahkan ID) -->
                <TextView
                    android:id="@+id/TV_totalExpense"
                    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LKR 70,000"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last update: 18:30"
                android:textColor="#E0E0E0"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- PLACEHOLDER UNTUK CHART -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/roundconer"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“Š Spending Overview"
        android:textSize="16sp"
        android:textColor="#2C3E50"
        android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Chart Placeholder)"
        android:textColor="#7F8C8D"
        android:layout_marginTop="12dp"/>
    </LinearLayout>

    <!-- BOTTOM MENU -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="32dp"
        android:padding="8dp">

        <!-- Menggunakan layout_weight=1 pada setiap ImageView untuk meniru space_evenly -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_bar_chart"
            android:contentDescription="Chart"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_person"
            android:contentDescription="Profile"/>
    </LinearLayout>
</LinearLayout>
