<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7FB"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Income &amp; Expense"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_gravity="center"
            android:layout_marginBottom="18dp"/>

        <!-- SUMMARY PANEL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="18dp"
            android:elevation="3dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Income"
                android:textColor="#2C3E50"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/TV_totalIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LKR 0"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textColor="#6C5CE7"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/TV_totalExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Expense: LKR 0"
                android:layout_marginTop="10dp"
                android:textColor="#E74C3C"
                android:textSize="14sp"/>
        </LinearLayout>


        <!-- =================== FOOD =================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="3dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food &amp; Beverages"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#2C3E50"/>

            <TextView
                android:id="@+id/tvFoodLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limit: LKR 0"
                android:textSize="14sp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/tvFoodUsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Used: LKR 0"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:textColor="#E67E22"/>

            <ProgressBar
                android:id="@+id/pbFood"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:max="100"
                android:progress="0"
                android:layout_marginTop="8dp"/>
        </LinearLayout>


        <!-- =================== UTILITY =================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="3dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Utilities"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#2C3E50"/>

            <TextView
                android:id="@+id/tvUtilityLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limit: LKR 0"
                android:textSize="14sp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/tvUtilityUsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Used: LKR 0"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:textColor="#E67E22"/>

            <ProgressBar
                android:id="@+id/pbUtility"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:max="100"
                android:progress="0"
                android:layout_marginTop="8dp"/>
        </LinearLayout>


        <!-- =================== HEALTH =================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="3dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#2C3E50"/>

            <TextView
                android:id="@+id/tvHealthLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limit: LKR 0"
                android:textSize="14sp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/tvHealthUsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Used: LKR 0"
                android:textSize="14sp"
                android:textColor="#E67E22"
                android:layout_marginTop="2dp"/>

            <ProgressBar
                android:id="@+id/pbHealth"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:max="100"
                android:progress="0"
                android:layout_marginTop="8dp"/>
        </LinearLayout>


        <!-- =================== OTHER =================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="3dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other Expenses"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#2C3E50"/>

            <TextView
                android:id="@+id/tvOtherLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limit: LKR 0"
                android:textSize="14sp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/tvOtherUsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Used: LKR 0"
                android:textSize="14sp"
                android:textColor="#E67E22"
                android:layout_marginTop="2dp"/>

            <ProgressBar
                android:id="@+id/pbOther"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:max="100"
                android:progress="0"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- BUTTON SET LIMIT -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSetLimit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="SET LIMIT"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="#6C5CE7"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
